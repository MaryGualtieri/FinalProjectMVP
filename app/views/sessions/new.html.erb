<%= flash[:failed_login] %>

<h1>Login</h1>
<div class="login">
<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>
  <p class="test-login">
    <%= submit_tag 'Log in' %>
  </p>
  </div class>
<% end %>
