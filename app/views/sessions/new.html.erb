<span style="color:red;"><%= flash[:failed_login] %></span>
<%= flash[:please_login] %>

<h1>Please Log In:</h1>
<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= submit_tag 'Log in' %>
  </p>
<% end %>
